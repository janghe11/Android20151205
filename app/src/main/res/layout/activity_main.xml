<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ebebeb"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editMainActivityName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="#f2f2f2"
        android:hint="name" />
    
    <EditText
        android:id="@+id/editMainActivityEmail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editMainActivityName"
        android:layout_margin="10dp"
        android:background="#f2f2f2"
        android:hint="email"/>

    <EditText
        android:id="@+id/editMainActivityMobile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editMainActivityEmail"
        android:layout_margin="10dp"
        android:background="#f2f2f2"
        android:hint="mobile"/>

    <EditText
        android:id="@+id/editMainActivityAddress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editMainActivityMobile"
        android:layout_margin="10dp"
        android:background="#f2f2f2"
        android:hint="address"/>

    <EditText
        android:id="@+id/editMainActivityCategory"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editMainActivityAddress"
        android:layout_margin="10dp"
        android:background="#f2f2f2"
        android:hint="category"/>
    
    <Button
        android:id="@+id/btnMainActivitySubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMainActivityCategory"
        android:layout_margin="10dp"
        android:text="submit"
        android:background="#227ec9"/>
</RelativeLayout>
